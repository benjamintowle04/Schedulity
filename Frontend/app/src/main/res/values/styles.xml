<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>


    <style name="AppTheme.popMode">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="line">
        <item name="android:background">@color/underline</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>D

    <style name="CalendarMonthView">
        <item name="android:dayOfWeekBackground">@null</item>
        <item name="android:weekNumberColor">@color/black</item>
        <item name="android:weekSeparatorLineColor">@color/cardinal</item>
        <item name="android:selectedWeekBackgroundColor">@color/gold</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
    </style>

    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>