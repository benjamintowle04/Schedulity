<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebSocketConnectActivity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chat_with_friend_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat with Friend"
            android:textAlignment="center"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/enter_message_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Enter Message"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/send_btn_websockets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message" />

        <TextView
            android:id="@+id/connect_text"
            android:layout_width="match_parent"
            android:layout_height="708dp"
            android:text="Conversation will appear here" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>